import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random randomizacao = new Random();
        
        System.out.println("*************************************************");
        System.out.println("**           BEM-VINDO AO N√öMERO DA SORTE!      **");
        System.out.println("*************************************************");
        System.out.println("**        Tente adivinhar o n√∫mero da sorte.     **");
        System.out.println("**  O n√∫mero est√° entre 0 e 99. Boa sorte!      **");
        System.out.println("*************************************************");
        
        System.out.print("Digite seu nome completo: ");
        String nome = scanner.nextLine();
        
        int numeroDaSorte = randomizacao.nextInt(100);
        
        int tentativa = 0;
        boolean acertou = false;
        int maxTentativas = 10;
        
        while (tentativa < maxTentativas && !acertou) {
            System.out.print("\nDigite seu palpite (entre 0 e 99): ");
            int palpite = scanner.nextInt();
            tentativa++;
            
            if (palpite == numeroDaSorte) {
                acertou = true;
                System.out.println("\nüéâ Parab√©ns, " + nome + "! Voc√™ acertou o n√∫mero da sorte! üéâ");
                System.out.println("N√∫mero da sorte era: " + numeroDaSorte);
                System.out.println("Tentativas necess√°rias: " + tentativa);
            } else if (palpite < numeroDaSorte) {
                System.out.println("üîº O n√∫mero da sorte √© maior. Tente novamente!");
            } else {
                System.out.println("üîΩ O n√∫mero da sorte √© menor. Tente novamente!");
            }
            
            if (!acertou && tentativa < maxTentativas) {
                System.out.print("\nDeseja continuar tentando? (s/n): ");
                char resposta = scanner.next().charAt(0);
                if (resposta == 'n' || resposta == 'N') {
                    System.out.println("\nVoc√™ optou por sair do jogo. At√© a pr√≥xima!");
                    break;
                }
            }
        }
        
        if (!acertou) {
            System.out.println("\nüòî Voc√™ excedeu o n√∫mero m√°ximo de tentativas.");
            System.out.println("N√∫mero da sorte era: " + numeroDaSorte);
        }
        
        scanner.close();
    }
}
